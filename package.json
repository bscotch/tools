{
  "name": "@bscotch/tools",
  "private": true,
  "type": "commonjs",
  "version": "2.2.0",
  "description": "A collection of node packages for common Typescript, Nodejs, and package deployment problems.",
  "scripts": {
    "clean": "rimraf packages/*/app/**/* && rimraf **/node_modules/**/*",
    "build": "npx tsc -b",
    "watch": "npx tsc -b -w",
    "test": "npm run build && lerna run test",
    "i:utility": "npx lerna add --scope=@bscotch/utility",
    "i:informer": "npx lerna add --scope=@bscotch/informer",
    "i:test": "npx lerna add --scope=@bscotch/tools-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^15.14.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-tsdoc": "^0.2.14",
    "fs-extra": "^10.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bscotch/tools.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bscotch/tools/issues"
  },
  "homepage": "https://github.com/bscotch/tools#readme",
  "prettier": {
    "trailingComma": "all",
    "bracketSpacing": true,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "volta": {
    "node": "16.13.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
