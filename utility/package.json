{
  "name": "@bscotch/utility",
  "version": "2.2.0",
  "description": "Bscotch Utilities: Methods for common Node.js needs.",
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "./app/index.js",
  "files": [
    "app"
  ],
  "scripts": {
    "prepublishOnly": "npm run can-publish",
    "preversion": "npm run can-publish",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && prettier src -w && git add -A",
    "postversion": "git push origin develop --follow-tags",
    "can-publish": "npm run _require-develop && npm run _require-ci",
    "_require-develop": "[ \"$(git rev-parse --symbolic-full-name --abbrev-ref HEAD)\" = \"develop\" ] || exit 1",
    "_require-ci": "[ \"${GITHUB_ACTIONS}\" = \"true\" ] || exit 1",
    "tsc-live": "npx tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bscotch/node-util.git"
  },
  "keywords": [
    "utility",
    "util",
    "string",
    "template",
    "path",
    "file",
    "bscotch",
    "butterscotch shenanigans"
  ],
  "author": "Adam Coster (https://www.bscotch.net/about)",
  "license": "MIT",
  "homepage": "https://github.com/bscotch/node-util",
  "bugs": {
    "url": "https://github.com/bscotch/node-util/issues"
  }
}
